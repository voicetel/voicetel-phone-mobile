{
	"name": "voicetel-phone",
	"version": "3.5.4",
	"description": "VoiceTel Phone",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"start:nosandbox": "ELECTRON_DISABLE_SANDBOX=1 electron .",
		"start:debug": "ELECTRON_ENABLE_LOGGING=1 electron .",
		"start:nosandbox-debug": "ELECTRON_DISABLE_SANDBOX=1 ELECTRON_ENABLE_LOGGING=1 electron .",
		"build": "electron-builder",
		"build:mac": "electron-builder --mac",
		"build:win": "electron-builder --win",
		"build:linux": "electron-builder --linux",
		"build:all": "electron-builder -mwl"
	},
	"build": {
		"appId": "com.voicetel.phone",
		"productName": "VoiceTel",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"mac": {
			"category": "public.app-category.utilities",
			"icon": "build/icon.icns",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"darkModeSupport": true,
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist"
		},
		"dmg": {
			"title": "${productName} ${version}",
			"icon": "build/icon.icns"
		},
		"win": {
			"icon": "build/icon.ico",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				},
				{
					"target": "portable",
					"arch": [
						"x64"
					]
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "VoiceTel"
		},
		"linux": {
			"icon": "build/icons",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				},
				{
					"target": "deb",
					"arch": [
						"x64"
					]
				}
			],
			"category": "Network",
			"desktop": {
				"entry": {
					"Name": "VoiceTel",
					"Comment": "VoiceTel WebRTC SIP Phone",
					"Categories": "Network;Telephony;"
				}
			}
		},
		"files": [
			"main.js",
			"index.html",
			"build/**/*"
		],
		"extraResources": [
			{
				"from": "build/icons/icon.png",
				"to": "icon.png"
			},
			{
				"from": "build/icons/icon.ico",
				"to": "icon.ico",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "build/icons/icon.icns",
				"to": "icon.icns",
				"filter": [
					"**/*"
				]
			}
		]
	},
	"keywords": [
		"voip",
		"sip",
		"webrtc",
		"phone"
	],
	"author": {
		"name": "VoiceTel",
		"email": "support@voicetel.com",
		"url": "http://www.voicetel.com"
	},
	"homepage": "https://github.com/voicetel/voicetel-phone-desktop",
	"license": "MIT",
	"devDependencies": {
		"electron": "^38.2.1",
		"electron-builder": "^26.0.12"
	},
	"dependencies": {
		"@capacitor-community/contacts": "^7.0.0",
		"@capacitor/android": "^7.4.4",
		"@capacitor/app": "^7.1.0",
		"@capacitor/cli": "^7.4.4"
	}
}
